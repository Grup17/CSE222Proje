<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/proje_arkaplan"
    android:visibility="visible"
    tools:context=".YemekTarifi">

    <TextView
        android:id="@+id/yemekadi"
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:cursorVisible="false"
        android:gravity="center"
        android:text="YEMEK ADI"
        android:textColor="#000000"
        android:textColorLink="#000000"
        android:textSize="28sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="22dp"
        android:onClick="yemegiGecmiseEkle"
        android:text="TAMAMLA" />

    <ImageButton
        android:id="@+id/hazirlanisSuresi"
        style="@android:style/Widget.Holo.Light.ImageButton"
        android:layout_width="54dp"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="141dp"
        android:onClick="bilgi"
        android:background="@android:color/transparent"
        app:srcCompat="@android:drawable/ic_menu_info_details" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="396dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="90dp"
        android:background="@color/colorWhite">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/textViewYemekTarifi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </ScrollView>


    </FrameLayout>

    <Button
        android:id="@+id/button4"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="124dp"
        android:onClick="yemegiKaralisteyeEkle"
        android:background="@drawable/carpi" />

    <Button
        android:id="@+id/button5"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="56dp"
        android:onClick="yemegiFavorilereEkle"
        android:background="@drawable/kalpp" />

</RelativeLayout>
